FROM node:18-alpine
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY index.js ./

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nextuser -u 1001 && \
    chown -R nextuser:nodejs /app
USER nextuser

EXPOSE 8080
ENV NODE_ENV=production

CMD ["node", "index.js"]